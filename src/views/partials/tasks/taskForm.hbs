<div class="card p-4 rounded-2 bg-dark text-white">
  <div class="card-header">
    <h3>Add a Task</h3>
  </div>
  <form action="/task/add" method="post">
    <div class="card-body">
      <div>
        <label for="title" class="form-label">Write a title:</label>
        <input type="text" name="title" placeholder="title" id="title" class="form-control bg-dark text-white" />
      </div>
      <div>
        <label for="description" class="form-label">Description:</label>
        <textarea name="description" id="description" placeholder="description" class="form-control bg-dark text-white"></textarea>
      </div>
    </div>
    <div class="d-flex justify-content-center mt-1 card-footer">
      <button class="btn btn-outline-success btn-sm w-50">Add</button>
    </div>
  </form>
</div>